<Window x:Class="_02_GIS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_GIS"
        mc:Ignorable="d"
        Title="GIS" Height="350" Width="520" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen" MinWidth="520" MinHeight="350">
    <Grid Margin="0,0,-0.4,-0.2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition Width="389*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10,20,15,10">
            <Button x:Name="btnConnect" Content="Connect" Click="btnConnect_Click"/>
            <Button x:Name="btnRäumungsauftrag" Content="Räumungsauftrag" Margin="0,10,0,0" Click="btnRäumungsauftrag_Click"/>
            <Label x:Name="label" Content="Copyright @ &#xD;&#xA;Sammer Manuel" Margin="0,200,0,0" VerticalAlignment="Center"/>
        </StackPanel>
        <Grid Margin="0,10,20,10" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="185*"/>
                <ColumnDefinition Width="184*"/>
            </Grid.ColumnDefinitions>
            <DataGrid x:Name="dataGridRäumungsabschnitte" Margin="10,10,9.8,10.4"/>
            <DataGrid x:Name="dataGridMitarbeiter" Margin="10.2,10,9.8,10.4" Grid.Column="1"/>
            <DataGrid x:Name="dataGridRäumungsaufträge" Margin="10,9.6,9.8,9.8" Grid.Row="1"/>
            <DataGrid x:Name="dataGridStraßenteilstrecken" Margin="10.2,9.6,9.8,9.8" Grid.Column="1" Grid.Row="1"/>
        </Grid>

    </Grid>
</Window>
