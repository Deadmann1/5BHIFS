<Window x:Class="Chat.ChatWindowServer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="Chat_Sammer_Server" Height="350" Width="525" ResizeMode="NoResize" Icon="Apps-Chat-icon.ico">
    <Grid>
        <ListBox x:Name="lbChat" Margin="10,50,10,10"/>
        <TextBox x:Name="txtPort" Height="23" Margin="229,16,170,0" TextWrapping="Wrap" Text="8091" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Port:" Margin="177,13,295,0" VerticalAlignment="Top"/>
        <Button x:Name="btnStart" Content="Start" Margin="354,16,90,0" VerticalAlignment="Top" Height="23" Click="btnStart_Click"/>
        <Button x:Name="btnStop" Content="Stop" Margin="434,16,10,0" VerticalAlignment="Top" Height="23" IsEnabled="False" Click="btnStop_Click"/>
    </Grid>
</Window>
